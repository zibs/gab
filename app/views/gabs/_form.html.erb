<% if @gab.errors.any? %>
  <section class="row">
    <section class="col-md-6 col-md-offset-3 alert alert-info">
      <ul>
        <% @gab.errors.full_messages.each do |error_msg| %>
          <li><%= error_msg %></li>
        <% end %>
      </ul>
    </section>
  </section>
<% end %>

<section class="row new-gab-wrap">
  <section class="col-md-8 col-md-offset-2">
    <%= simple_form_for(@gab) do |f| %>
      <%= f.input :title, label: false, as: :string, class: "summernote", input_html: { class: 'form-overide form-control', id: "gab-title-style", placeholder: "gab title...."} %>
      <%= f.input :body, label: false, class: 'summernote', input_html: {class: "form-control", placeholder: "content"} %>
      <%= f.submit class: 'btn btn-default btn-lg center-block', id: "gab-submit" %>
      <%= link_to 'Show', @gab, class: 'gab-btn btn btn-default' if @gab.persisted? %>
    <% end %>
  </section>
</section>
