<h1>new gab</h1>
<% if @gab.errors.any? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 alert alert-info">
      <ul>
        <% @gab.errors.full_messages.each do |error_msg| %>
          <li><%= error_msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<%= simple_form_for(@gab) do |f| %>
  <%= f.input :title, input_html: { class: 'form-control'} %>
  <%= f.input :body, class: 'summernote', input_html: {class: "form-control"} %>
  <%= f.submit class: 'btn btn-default' %>
  <%= link_to 'Show', @gab, class: 'btn btn-default' if @gab.persisted? %>
  <%= link_to 'Back', gabs_path, class: 'btn btn-default' %>
<% end %>
